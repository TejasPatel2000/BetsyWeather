var request = require('request');
var url ='https://api.weather.gov/gridpoints/PHI/66,95/forecast';

var options = {
        url: 'https://api.weather.gov/gridpoints/PHI/66,95/forecast',
        headers: {
         'User-Agent': 'ubuntu'
        }
        }


request(options, function (err, response, body) {
        if(err){
         console.log('error: ', err);
        }else {
         var info = JSON.parse(body);
         var temperature =`Today in Plainsboro, it is ${JSON.stringify(info.properties.periods[0].temperature)}F`;
         var windSpeed = `The windspeed is ${JSON.stringify(info.properties.periods[0].windSpeed)}`;
         var windDirection = ` in the direction ${JSON.stringify(info.properties.periods[0].windDirection)}`;
         var shortForecast = `It is ${JSON.stringify(info.properties.periods[0].shortForecast)}`;

          console.log(temperature,shortForecast);
         console.log(windSpeed,windDirection);
        }
});
